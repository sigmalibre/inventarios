{% extends 'templates/base.twig' %}

{% block title %}Reporte Rendimiento{% endblock %}

{% block breadcrumb %}
    {{ bread.crumb(path_for('reportes'), 'Reportes') }}
{% endblock %}

{% block content %}

<div class="container-fluid">
    {% if is_admin %}
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4 class="panel-title">Rendimiento de Ventas</h4>
                </div>
                <div class="table-responsive">
                    <table id="rendimiento_vendedores" class="table table-bordered">
                        <thead style="border-top: 1px solid #dddddd;">
                            <tr>
                                <th colspan="2">Periodos</th>
                                <th colspan="2">Dia {{ dia }}</th>
                                <th colspan="2">Mes {{ mes }}</th>
                                <th colspan="2" class="tableexport-string">AÃ±o {{ ano }}</th>
                            </tr>
                            <tr>
                                <th>Empleado</th>
                                <th>Codigo</th>
                                <th>Facturas</th>
                                <th>Valor</th>
                                <th>Facturas</th>
                                <th>Valor</th>
                                <th>Facturas</th>
                                <th>Valor</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for empleado in rendimiento %}
                            <tr>
                                <td>{{ empleado.nombre }}</td>
                                <td>{{ empleado.codigo }}</td>
                                <td>{{ empleado.dia.cantidad }}</td>
                                <td>$ {{ empleado.dia.valor|number_format(2) }}</td>
                                <td>{{ empleado.mes.cantidad }}</td>
                                <td>$ {{ empleado.mes.valor|number_format(2) }}</td>
                                <td>{{ empleado.ano.cantidad }}</td>
                                <td>$ {{ empleado.ano.valor|number_format(2) }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    {% endif %}
</div>
<script>
TableExport(document.getElementById('rendimiento_vendedores'), {
    filename: 'rendimiento_vendedores',
    position: 'top',
    formats: ['xlsx'],
})
</script>

{% endblock %}
